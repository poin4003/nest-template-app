generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model ActionLog {
  id          String    @id @default(uuid()) @db.Uuid
  payload     String?   @db.Text
  objectId    String?   @map("object_id")
  response    String?   @db.Text
  reqAt       DateTime? @map("req_at")
  reqDuration Float?    @map("req_duration")
  status      Int       @default(1)
  type        Int       @default(1)

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @map("updated_at")
  description String?  @db.Text
  note        String?  @db.Text

  @@index([objectId])
  @@map("action_logs")
}

model Order {
  id   String @id @default(uuid()) @db.Uuid
  code String @unique

  phoneNumber String @map("phone_number")
  serial      String

  step   Int @default(1)
  status Int @default(1)
  type   Int @default(1)

  errorCode    Int?    @map("error_code")
  errorMessage String? @map("error_message")

  rawData Json? @map("raw_data")

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @map("updated_at")
  description String?  @db.Text
  note        String?  @db.Text

  profiles Profile?

  @@index([phoneNumber])
  @@index([serial])
  @@index([errorCode])
  @@map("orders")
}

model Profile {
  id String @id @default(uuid()) @db.Uuid

  orderId String @unique @map("order_id") @db.Uuid
  order   Order  @relation(fields: [orderId], references: [id])

  name      String?
  rawData   Json?   @map("raw_data")
  frontPath String? @map("front_path")
  backPath  String? @map("back_path")
  portrait  String?

  type   Int @default(1)
  status Int @default(1)

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @map("updated_at")
  description String?  @db.Text
  note        String?  @db.Text

  @@map("profiles")
}
